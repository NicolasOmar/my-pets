{
  "header": {
    "title": {
      "titleText": "Add new Pet",
      "titleSize": "big",
      "isCentered": true
    }
  },
  "inputs": {
    "name": {
      "label": "Name",
      "type": "text",
      "control": "name",
      "isVisible": true,
      "isRequired": true,
      "minLength": 5,
      "maxLength": 35
    },
    "petType": {
      "label": "Type",
      "type": "select",
      "control": "petType",
      "firstNullOption": true,
      "isVisible": true,
      "isRequired": true
    },
    "gender": {
      "label": "Gender",
      "type": "radio",
      "control": "gender",
      "name": "gender",
      "isVisible": true,
      "isRequired": true,
      "options": [
        {
          "control": "masculine",
          "label": "Masculine"
        },
        {
          "control": "femenine",
          "label": "Femenine"
        }
      ]
    },
    "birthday": {
      "label": "Birthday",
      "type": "date",
      "control": "birthday",
      "isVisible": true
    },
    "isAdopted": {
      "label": "Is adopted",
      "type": "checkbox",
      "control": "isAdopted",
      "name": "isAdopted",
      "isVisible": true,
      "options": [
        {
          "control": "isAdopted"
        }
      ]
    },
    "adoptionDate": {
      "label": "Adoption Date",
      "type": "date",
      "control": "adoptionDate"
    },
    "height": {
      "label": "Height",
      "type": "number",
      "control": "height",
      "isVisible": true
    },
    "length": {
      "label": "Length",
      "type": "number",
      "control": "length",
      "isVisible": true
    },
    "weight": {
      "label": "Weight",
      "type": "number",
      "control": "weight",
      "isVisible": true
    },
    "hairColors": {
      "label": "Hair Color/s",
      "type": "select",
      "control": "hairColors",
      "isMultiple": true,
      "optionsShown": 3,
      "isVisible": true,
      "isRequired": true
    },
    "hasHeterochromia": {
      "label": "Has Heterochromia",
      "type": "checkbox",
      "control": "hasHeterochromia",
      "name": "hasHeterochromia",
      "isVisible": true,
      "options": [
        {
          "control": "hasHeterochromia"
        }
      ]
    },
    "eyeColors": {
      "label": "Eye Color/s",
      "type": "select",
      "control": "eyeColors",
      "firstNullOption": true,
      "isVisible": true,
      "isRequired": true
    }
  },
  "dividers": [
    {
      "after": "adoptionDate"
    }
  ],
  "addPetButton": {
    "type": "submit",
    "color": "success",
    "label": "Confirm"
  },
  "goToHomeButton": {
    "type": "button",
    "color": "danger",
    "label": "Cancel"
  }
}
