{
  "header": {
    "titleText": "Add new Pet",
    "titleSize": "big",
    "isCentered": true
  },
  "inputs": {
    "name": {
      "label": "Name",
      "type": "text",
      "control": "name",
      "isRequired": true,
      "minLength": 2,
      "maxLength": 250
    },
    "type": {
      "label": "Type",
      "type": "select",
      "control": "type",
      "options": [
        {
          "label": "Dog",
          "value": "dog"
        },
        {
          "label": "Cat",
          "value": "cat"
        }
      ]
    },
    "birthday": {
      "label": "Birthday",
      "type": "date",
      "control": "birthday",
      "isRequired": true
    },
    "isAdopted": {
      "label": "Is adopted",
      "type": "checkbox",
      "control": "isAdopted",
      "name": "isAdopted"
    },
    "adoptionDate": {
      "label": "Adoption Date",
      "type": "date",
      "control": "adoptionDate",
      "isRequired": true
    }
  },
  "addPetButton": {
    "type": "submit",
    "color": "success",
    "label": "Confirm"
  },
  "goToHomeButton": {
    "type": "button",
    "color": "danger",
    "label": "Cancel"
  }
}