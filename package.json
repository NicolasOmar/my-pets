{
  "name": "my-pets",
  "version": "0.2.10",
  "description": "A react-based web application for daily activity log of family pets",
  "author": "Nicolás Omar González Passerino",
  "license": "MIT",
  "private": false,
  "homepage": "https://my-pets-prod.netlify.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NicolasOmar/my-pets.git"
  },
  "bugs": {
    "url": "https://github.com/NicolasOmar/my-pets/issues"
  },
  "type": "module",
  "scripts": {
    "start": "vite",
    "start:prod": "npm run build:app && npm run preview",
    "test": "vitest",
    "test:ci": "npm run test -- --coverage --pool=forks",
    "build:app": "tsc -b && vite build",
    "build:styles": "npm run sass:css -- sass/styles.scss:public/styles/styles.css",
    "preview": "vite preview",
    "setup": "npm i && npm i -g npm-check-updates && husky install",
    "lint": "eslint src/**/*{ts,tsx} --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier src/**/*.{ts,tsx} --check",
    "prettier:fix": "prettier src/**/*.{ts,tsx} --write",
    "lint-staged": "lint-staged -v",
    "sass:css": "sass --no-source-map --stop-on-error -c --style=compressed",
    "update": "npm run update:deps && npm run update:doctor",
    "update:deps": "ncu -i --format group",
    "update:doctor": "npm run prettier && npm run lint && npm run build:app && npm run test:ci"
  },
  "dependencies": {
    "@apollo/client": "^3.12.2",
    "crypto-js": "^4.2.0",
    "formik": "^2.4.6",
    "graphql": "^16.9.0",
    "luxon": "^3.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "reactive-bulma": "^4.2.1",
    "validator": "^13.12.0",
    "web-vitals": "^4.2.4"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.4",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.16.0",
    "@mdi/font": "^7.4.47",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "@vitest/coverage-v8": "^2.1.8",
    "bulma": "^0.9.4",
    "eslint": "^9.16.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.13.0",
    "history": "^5.3.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "sass": "^1.82.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vite": "^6.0.3",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "src/**/*.(ts|tsx)": [
      "prettier --write",
      "eslint"
    ],
    "src/**/*.scss": [
      "prettier --write"
    ]
  }
}
