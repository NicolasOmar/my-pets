{
  "name": "my-pets",
  "version": "0.2.12",
  "description": "A react-based web application for daily activity log of family pets",
  "author": "Nicolás Omar González Passerino",
  "license": "MIT",
  "private": false,
  "homepage": "https://my-pets-prod.netlify.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NicolasOmar/my-pets.git"
  },
  "bugs": {
    "url": "https://github.com/NicolasOmar/my-pets/issues"
  },
  "type": "module",
  "scripts": {
    "start": "vite",
    "start:prod": "npm run build && npm run preview",
    "test": "vitest",
    "test:ci": "npm run test -- --coverage --pool=forks",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "setup": "npm ci && husky",
    "lint": "eslint",
    "prettier": "prettier src/**/*.{ts,tsx} --check",
    "prettier:fix": "prettier src/**/*.{ts,tsx} --write",
    "lint-staged": "lint-staged -v",
    "update": "npm run update:deps && npm run update:doctor",
    "update:deps": "ncu -i --format group",
    "update:doctor": "npm run prettier && npm run lint && npm run build && npm run test"
  },
  "dependencies": {
    "@apollo/client": "^3.13.1",
    "crypto-js": "^4.2.0",
    "formik": "^2.4.6",
    "graphql": "^16.10.0",
    "luxon": "^3.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.4.0",
    "reactive-bulma": "^4.3.11",
    "validator": "^13.12.0",
    "web-vitals": "^4.2.4"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.6",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.20.0",
    "@mdi/font": "^7.4.47",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/crypto-js": "^4.2.2",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.9",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "@vitest/coverage-v8": "^3.0.5",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "history": "^5.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "npm-check-updates": "^17.1.14",
    "prettier": "^3.5.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vite": "^6.1.0",
    "vitest": "^3.0.5"
  },
  "lint-staged": {
    "src/**/*.(ts|tsx)": [
      "prettier --write",
      "eslint"
    ]
  }
}
